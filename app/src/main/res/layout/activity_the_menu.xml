<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dbdbdb"
    tools:context="com.example.yasmeen.nowaitressing1.theMenu"
    android:weightSum="6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=""
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/category"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5"
        />
<ListView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/listview_product"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:dividerHeight="10dp"
    android:divider="#d1d1d1"
    android:layout_weight="4.8"
    >

</ListView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="12dp"
        android:background="@drawable/backgound_button_seemore"
        android:textColor="#ffffff"
        android:text="see More"
        android:layout_marginRight="5dp"
        android:onClick="seeMore"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@drawable/backgroud_textview_menu"
        android:layout_marginBottom="1dp"
        android:id="@+id/orders"
        android:textColor="#000000"

        />
</LinearLayout>
